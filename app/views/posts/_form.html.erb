<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <div class="field">
    <div class="control">
      <%= f.input :story, 
                label: "Write your story", 
                input_html: { class: 'textarea' }, 
                wrapper:false, 
                label_html: { class: "label" }, 
                placeholder: "Compose a new Story...", 
                autofocus: true
      %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-link" %>
<% end %>