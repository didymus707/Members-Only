<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar is-link">
      <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-4">ClubHouse</h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control df ai-c">
              <%#= link_to 'New Tweeet', root_path, class: 'button is-info is-inverted' %>
            </p>
            <% if user_signed_in? %>
              <p class="control df ai-c">
                <%= link_to current_user.name, edit_user_registration_path, class: "button is-link" %>
              </p>
              <p class="control df ai-c">
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "button is-link" %>
              </p>
            <% else %>
              <p class="control df ai-c"><%= link_to 'Sign In', new_user_session_path, class: "button is-link" %></p>
              <p class="control df ai-c"><%= link_to 'Sign Up', new_user_registration_path, class: "button is-link" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
